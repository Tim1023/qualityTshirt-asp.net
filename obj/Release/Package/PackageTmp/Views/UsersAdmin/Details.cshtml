@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "詳細資料";
}

<h2>詳細資料</h2>

<div>
    <h4>使用者</h4>
    <hr />
    <p> @Html.DisplayFor(model => model.UserName)</p> 
</div>
<br />
<h4>擁有權限</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>無特殊權限</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("編輯", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("回帳務管理", "Index")
</p>



