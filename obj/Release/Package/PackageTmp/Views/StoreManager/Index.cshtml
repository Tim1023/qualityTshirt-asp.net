@model IEnumerable<WecareMVC.Models.Album>
@helper Truncate(string input , int length)
{
    if (input.Length<=length)
    {
        @input
    }
    else
    {
       @input.Substring(0, length)<text>...</text>
    }
        
    }


@{
    ViewBag.Title = "Index";
}

<h2>商品管理</h2>

<p>
    @Html.ActionLink("商品上架", "Create")
</p>
<table class="table">
    <tr>
        <th>
            商品分類
        </th>
        <th>
            製造商
        </th>
        <th>
           商品名稱
        </th>
        <th>
            單價
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.AlbumArtUrl)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Truncate(item.Artist.Name,25)
        </td>
        <td>
            @Truncate(item.Title,25)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.AlbumArtUrl)
        </td>*@
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("查看", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("刪除", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
